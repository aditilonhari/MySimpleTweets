<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/border_layout_compose"
    android:id="@+id/relativeLayoutFragment"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/standard_image_size"
        android:layout_height="@dimen/standard_image_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ivProfileImgCompose" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserNameCompose"
        android:layout_marginRight="@dimen/border_layout_compose"
        android:textStyle="bold"
        android:layout_alignTop="@+id/ivProfileImgCompose"
        android:layout_toStartOf="@+id/ivProfileImgCompose"
        android:layout_toLeftOf="@+id/ivProfileImgCompose"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginRight="@dimen/border_layout_compose"
        android:layout_below="@+id/tvUserNameCompose"
        android:layout_toLeftOf="@+id/ivProfileImgCompose"
        android:id="@+id/tvTwitterHandlerCompose" />

    <Button
        android:text="Tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TweetButton"
        android:layout_below="@+id/etBodyCompose"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnTweetCompose" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:inputType="textMultiLine"
        android:hint="What's Happening!!"
        android:textColor="@android:color/black"
        android:gravity="top"
        android:ems="10"
        android:id="@+id/etBodyCompose"
        android:layout_below="@+id/ivProfileImgCompose"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etBodyCompose"
        android:layout_toStartOf="@+id/btnTweetCompose"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:id="@+id/tvCounterCompose" />

    <ImageButton
        android:src="@drawable/ic_clear_blue"
        android:layout_width="@dimen/standard_image_size"
        android:layout_height="@dimen/standard_image_size"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/ivProfileImgCompose"
        android:id="@+id/btnCancelCompose" />
</RelativeLayout>